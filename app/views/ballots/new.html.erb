<h1>
    <%= current_user.badge %>
    <%= current_user.name %>
</h1>

<%= form_for([@user, @ballot]) do |f| %>
  <div class="form-group">
  <dl class="dl-horizontal"> 
  <%  @categories.each_with_index do |cat| %>
        <dt><%= label_tag(cat) %></dt>
        <dd>
        <%= f.select(:product, @hsh[cat], :include_blank => true ) %>
        </dd>   
  <% end %>
<%= f.submit("Create Ballot") %>
<% end %>
